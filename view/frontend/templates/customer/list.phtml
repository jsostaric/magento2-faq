/** @var \Inchoo\ProductFAQ\Block\Customer\ListCustomer $block */
?>
<?php if ($block->getQuestions() && count($block->getQuestions())) : ?>
    <div class="page-wrapper faq">
        <?php foreach ($block->getQuestions() as $question): ?>
        <div class="title-row">
            <h4 class="title">
                Question regarding product
                <span data-content="<?= $block->escapeHtmlAttr(__('Product Name')) ?>" class="col product-name">
                    <a href="<?= $block->escapeUrl($block->getProductUrl($question->getProductId())) ?>">
                        <?= $block->escapeHtml($block->getProductName($question->getProductId())) ?>
                    </a>
                </span>
            </h4>
            <p data-content="<?= $block->escapeHtmlAttr(__('Created')) ?>" class="col date">
                Created At: <small><?= $block->escapeHtml($block->dateFormat($question->getCreatedAt())) ?></small>
            </p>
            <p data-content="<?= $block->escapeHtmlAttr(__('Question')) ?>" class="col question-content">
                <strong class="faq-question">
                   Q: <?= $block->escapeHtml($question->getQuestionContent()) ?>
                </strong>
            </p>
            <p data-content="<?= $block->escapeHtmlAttr(__('Answer')) ?>" class="col actions">
                <i><?= $block->escapeHtml($question->getAnswerContent()) ? '<strong>A:</strong> ' . $block->escapeHtml($question->getAnswerContent()) : 'No answer yet.' ?></i>
            </p>
            <hr>
        </div>
        <?php endforeach ?>
    </div>
<?php else : ?>
    <div class="message info empty"><span><?= $block->escapeHtml(__('You have submitted no questions.')) ?></span></div>
<?php endif; ?>
<div class="actions-toolbar">
    <div class="secondary">
        <a class="action back" href="<?= $block->escapeUrl($block->getBackUrl()) ?>">
            <span><?= $block->escapeHtml(__('Back')) ?></span>
        </a>
    </div>
</div>
